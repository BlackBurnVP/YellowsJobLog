<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="44dp">

    <TextView
            android:text="Working on App"
            android:layout_width="290dp"
            android:layout_height="22dp"
            android:id="@+id/txt_workDesc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:textStyle="bold" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="JobLog"
            android:layout_width="290dp"
            android:layout_height="20dp"
            android:id="@+id/txt_projectName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txt_workDesc" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"/>
    <TextView
            android:text="11:40-12:30"
            android:layout_width="94dp"
            android:layout_height="22dp" android:id="@+id/txt_TimeFlow"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:layout_toEndOf="@+id/txt_workDesc"
            android:layout_toRightOf="@+id/txt_workDesc" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"/>
    <TextView
            android:text="8:00:00"
            android:layout_width="94dp"
            android:layout_height="20dp" android:id="@+id/txt_resTime"
            android:layout_marginTop="0dp" android:layout_toEndOf="@+id/txt_workDesc"
            android:layout_toRightOf="@+id/txt_workDesc" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:layout_below="@+id/txt_TimeFlow"/>
</RelativeLayout>